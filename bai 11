#include<bits/stdc++.h>
using namespace std;
int main() {
    vector<int> v;
    long long n;
    cin>>n;
    if(n>0) {
    while(n>0) {
        int tmp=n%2;
        v.push_back(tmp);
        n=n/2;
    }
    for(int i=v.size()-1;i>=0;i--) {
        cout<<v[i];
    }
    }
    else  {
        n=-n;
        while(n>0) {
        int tmp=n%2;
        v.push_back(tmp);
        n=n/2;
    }
    
    for(int i=v.size()-1;i>=0;i--) {
        cout<<v[i];
    }
    }
}
